<Window x:Class="VectorEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Vector Editor" Height="600" Width="900">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Rect" Click="RectButton_Click"/>
            <Button Content="Ellipse" Click="EllipseButton_Click"/>
            <Button Content="Polygon" Click="PolygonButton_Click"/>
            <Separator/>
            <Button Content="Save" Click="SaveButton_Click"/>
            <Button Content="Load" Click="LoadButton_Click"/>
            <Separator/>
            <Button Content="Undo" Click="UndoButton_Click"/>
            <Button Content="Redo" Click="RedoButton_Click"/>
        </ToolBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="6">
                <Canvas x:Name="DrawingCanvas" Background="White"/>
            </Border>

            <StackPanel Grid.Column="1" Margin="6">
                <TextBlock FontWeight="Bold" Text="Inspector"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="X:" Width="30"/>
                    <TextBox x:Name="XBox" Width="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Y:" Width="30"/>
                    <TextBox x:Name="YBox" Width="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Width:" Width="50"/>
                    <TextBox x:Name="WidthBox" Width="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Height:" Width="50"/>
                    <TextBox x:Name="HeightBox" Width="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Fill:" Width="50"/>
                    <TextBox x:Name="FillBox" Width="80"/>
                </StackPanel>
                <Button Content="Apply" Margin="0,6,0,0" Click="ApplyChanges_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
