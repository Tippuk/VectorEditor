<Window x:Class="VectorEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Vector Editor" Height="600" Width="900">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Rect" Click="RectButton_Click"/>
            <Button Content="Ellipse" Click="EllipseButton_Click"/>
            <Button Content="Polygon" Click="PolygonButton_Click"/>
            <Separator/>
            <TextBlock Text="Fill:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox x:Name="ColorComboBox" Width="80" SelectionChanged="ColorComboBox_SelectionChanged">
                <ComboBoxItem Content="LightBlue" IsSelected="True"/>
                <ComboBoxItem Content="Red"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Yellow"/>
                <ComboBoxItem Content="Gray"/>
            </ComboBox>
        </ToolBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="6">
                <Canvas x:Name="DrawingCanvas" Background="White"/>
            </Border>

            <!-- Inspector -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock FontWeight="Bold" FontSize="14" Text="Inspector" Margin="0,0,0,10"/>

                <TextBlock Text="X:"/>
                <TextBox x:Name="XBox" Text="0"/>
                <TextBlock Text="Y:"/>
                <TextBox x:Name="YBox" Text="0"/>
                <TextBlock Text="Width:"/>
                <TextBox x:Name="WidthBox" Text="0"/>
                <TextBlock Text="Height:"/>
                <TextBox x:Name="HeightBox" Text="0"/>
                <TextBlock Text="Fill Color:"/>
                <TextBox x:Name="FillBox" Text="LightBlue"/>

                <Button Content="Apply" Margin="0,10,0,0" Click="ApplyChanges_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
